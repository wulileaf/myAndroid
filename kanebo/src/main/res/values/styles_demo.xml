<resources>
    <!--GuideCaseView-->
    <style name="MyTitleStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#00ff00</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>


    <!-- FabMenu -->
    <style name="FabMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

<!--    <style name="FabMenu.Buttons">-->
<!--        <item name="fab_size">mini</item>-->
<!--        <item name="fab_colorNormal">#3E99D2</item>-->
<!--        <item name="fab_colorPressed">#2488C6</item>-->
<!--        <item name="fab_colorRipple">#AF2488C6</item>-->
<!--    </style>-->

    <!-- PhotoPicker -->
    <style name="actionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="actionBarSize">48dp</item>
    </style>

    <style name="PhotoPickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/actionBarTheme</item>
        <item name="colorPrimary">#299EE3</item>
        <item name="actionBarSize">48dp</item>
        <item name="colorPrimaryDark">#299EE3</item>
    </style>

    <!--CityPicker-->
    <style name="CustomAnim">
        <item name="android:windowEnterAnimation">@anim/custom_push_down_in</item>
        <item name="android:windowExitAnimation">@anim/custom_push_up_out</item>
    </style>

    <style name="DefaultCityPickerTheme" parent="XUITheme.Phone">
        <item name="cpCancelTextSize">@dimen/cp_cancel_text_size</item>
        <item name="cpCancelTextColor">@color/cp_color_gray</item>

        <item name="cpClearTextIcon">@mipmap/cp_icon_clear_all</item>
        <item name="cpSearchTextSize">@dimen/cp_search_text_size</item>
        <item name="cpSearchTextColor">@color/cp_color_gray_dark</item>
        <item name="cpSearchHintText">@string/cp_search_hint_text</item>
        <item name="cpSearchHintTextColor">@color/cp_color_gray_light</item>
        <item name="cpSearchCursorDrawable">@color/cp_color_gray_dark</item>

        <item name="cpListItemHeight">@dimen/cp_list_item_height</item>
        <item name="cpListItemTextSize">@dimen/cp_list_item_text_size</item>
        <item name="cpListItemTextColor">@color/cp_color_gray_deep</item>

        <item name="cpEmptyIcon">@mipmap/cp_icon_empty</item>
        <item name="cpEmptyIconWidth">@dimen/cp_empty_icon_width</item>
        <item name="cpEmptyIconHeight">@dimen/cp_empty_icon_height</item>
        <item name="cpEmptyText">@string/cp_no_result</item>
        <item name="cpEmptyTextSize">@dimen/cp_empty_text_size</item>
        <item name="cpEmptyTextColor">@color/cp_color_gray_deep</item>

        <item name="cpGridItemBackground">@drawable/cp_grid_item_bg</item>
        <item name="cpGridItemSpace">@dimen/cp_grid_item_space</item>

        <item name="cpSectionHeight">@dimen/custom_section_height</item>
        <item name="cpSectionTextSize">@dimen/cp_section_text_size</item>
        <item name="cpSectionTextColor">@color/cp_color_gray</item>
        <item name="cpSectionBackground">@color/cp_color_section_bg</item>

        <item name="cpIndexBarTextSize">@dimen/cp_index_bar_text_size</item>
        <item name="cpIndexBarNormalTextColor">@color/cp_color_gray</item>
        <item name="cpIndexBarSelectedTextColor">@color/cp_color_gray_dark</item>

        <item name="cpOverlayWidth">@dimen/cp_overlay_width</item>
        <item name="cpOverlayHeight">@dimen/cp_overlay_height</item>
        <item name="cpOverlayTextSize">@dimen/cp_overlay_text_size</item>
        <item name="cpOverlayTextColor">@color/xui_config_color_white</item>
        <item name="cpOverlayBackground">@drawable/cp_overlay_bg</item>
    </style>


    <style name="CustomCityPickerTheme" parent="XUITheme.Phone">
        <item name="cpCancelTextColor">@color/color_green</item>
        <item name="cpSearchCursorDrawable">@color/color_green</item>
        <item name="cpIndexBarNormalTextColor">@color/color_green</item>
        <item name="cpIndexBarSelectedTextColor">@color/color_green</item>
        <item name="cpSectionHeight">@dimen/custom_section_height</item>
        <item name="cpOverlayBackground">@color/color_green</item>
    </style>

    <style name="EditInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="sLeftTextSize">17sp</item>
        <item name="sLeftTextColor">@color/xui_config_color_black</item>
        <item name="sCenterTextColor">@color/xui_config_color_black</item>
        <item name="sLeftViewWidth">60dp</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="sCenterViewMarginLeft">15dp</item>
        <item name="sCenterViewMarginRight">15dp</item>
        <item name="sDividerLineHeight">2dp</item>
        <item name="sRightTextSize">13sp</item>
        <item name="sRightViewMarginRight">0dp</item>
        <item name="sLeftIconWidth">16dp</item>
        <item name="sLeftIconHeight">16dp</item>
        <item name="sUseRipple">false</item>
        <item name="sEnableEdit">true</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light">
        <!-- 更换 Toolbar OVerFlow menu icon -->
<!--        <item name="actionOverflowButtonStyle">@style/OverFlowIcon</item>-->
        <!-- 设置 Toolbar 溢出菜单的文字的颜色 -->
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <!-- 设置 显示在Toolbar上菜单文字的颜色 -->
        <item name="actionMenuTextColor">@color/xui_config_color_white</item>
        <!-- 设置toolbar 弹出菜单的字体大小-->
        <item name="android:textSize">15sp</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <item name="colorControlNormal">@color/xui_config_color_white</item>
        <item name="colorControlActivated">@color/xui_config_color_white</item>
    </style>

    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorAccent</item>
        <item name="titleTextColor">@color/xui_config_color_white</item>
        <item name="subtitleTextColor">@color/xui_config_color_white</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">?attr/xui_actionbar_title_text_size</item>
        <item name="android:textColor">@color/xui_config_color_white</item>
    </style>

    <style name="ToolbarSubTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">?attr/xui_actionbar_sub_text_size</item>
        <item name="android:textColor">@color/xui_config_color_white</item>
    </style>

    <style name="ToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

<!--    <style name="OverFlowIcon" parent="Widget.AppCompat.ActionButton.Overflow">-->
<!--        <item name="android:src">@drawable/ic_navigation_more</item>-->
<!--    </style>-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextStyle.Calendar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/xui_config_color_content_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="pop_window_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_show_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_hidden_anim</item>
    </style>

</resources>